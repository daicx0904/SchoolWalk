
<MainWindow>:
    id: screen_manager
    
    StudentManagementScreen:
        id: students_screen
        name: 'students'
    
    TeacherManagementScreen:
        id: teachers_screen
        name: 'teachers'

<StudentListItem@BoxLayout>:
    orientation: 'horizontal'
    size_hint_y: None
    height: 40
    Label:
        text: root.text
    Button:
        text: '删除'
        size_hint_x: 0.2
        on_press: app.root.current_screen.delete_student(root.student_id)

<TeacherListItem@BoxLayout>:
    orientation: 'horizontal'
    size_hint_y: None
    height: 40
    Label:
        text: root.text
    Button:
        text: '查看位置'
        size_hint_x: 0.3
        on_press: app.root.current_screen.show_location(root.location)
